<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.Movie" />

    <style name="Base.Theme.Movie" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme" />

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.Light.DarkActionBar" />

    <style name="TextAppearance.AppTheme.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>